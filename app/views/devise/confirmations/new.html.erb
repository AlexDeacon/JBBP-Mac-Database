

<%= form_for(resource, :as => resource_name, :url =>  confirmation_path(resource_name), :html => { :method => :post,  :class => "yform" }) do |f| %>
  <%= devise_error_messages! %>
  <fieldset class="columnar">
  <legend>Resend confirmation instructions</legend>
  <div class="type-text"><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div class="class-button"><%= f.submit "Resend confirmation instructions" %></div>
  </fieldset>
<% end %>

<%= render :partial => "devise/shared/links" %>
