<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "yform"}) do |f| %>
<fieldset class="columnar">
  <legend>Sign In</legend>
 
  <div class="type-text">
   <%= f.label :email %>
    <%= f.email_field :email %></div>
  
  <div class="type-text">
    <%= f.label :password %>
    <%= f.password_field :password %></div>
  
  <% if devise_mapping.rememberable? -%>
  <div class="type-check">
    <%= f.label :remember_me %><%= f.check_box :remember_me %> 
  </div>

  <% end -%>
  
  <div class="type-button"><%= f.submit "Sign in" %></div>
  <% end %>
</fieldset>

<%= link_to "Sign up", new_user_registration_path %><br \>
