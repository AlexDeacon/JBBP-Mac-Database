<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "yform"}) do |f| %>
<fieldset>
  <legend>Sign In</legend>
 
  <div class="type-text">
   <%= f.label :email %><br />
    <%= f.email_field :email %></div>
  
  <div class="type-text">
    <%= f.label :password %><br /> 
    <%= f.password_field :password %></div>
  
  <% if devise_mapping.rememberable? -%>
  <div class="type-text">
    <%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
  
  <div class="type-button"><%= f.submit "Sign in" %></div>
  <% end %>
</fieldset>

<%= link_to "Sign up", new_user_registration_path %><br \>
<%= link_to "Forgot your password?", new_password_path(User) %>
