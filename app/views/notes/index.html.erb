<div id="col1">
  <div id="col1_content" class="clearfix">
    <%= image_tag "note.jpg", :size => "80x80" %>
    <br \> 
    <div class="info">
      <!-- add your content here -->
      <p><strong>Filter</strong></p>
      <p><%= link_to "All", :filter => "All" %></p> 
      <p><%= link_to "Battery", :filter => "battery" %></p>
